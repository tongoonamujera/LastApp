<% if user_signed_in? %>
  <p id="notice"><%= notice %>
  <div class="row mb-3">
    <% @friends.each do |friend| %>
      <div class="card col-5 mb-3 bg-light mx-auto text-center">
        
          <div class="card-body">
            <h4 class="card-title"><%= link_to friend.First_name + " " + friend.Last_name, friend, class:"text-decoration-none text-primary" %></h4>
            <p class="card-text"><span><strong>Email:</strong> <%= friend.Email %></span></p>
            <p class="card-text"><span><strong>Phone:</strong> <%= friend.Phone %></span></p>
            <p class="card-text"><span><strong>Country:</strong> <%= friend.Country %></span></p>
            <p>Created <%= time_ago_in_words(friend.created_at) %> ago</p>
          </div>
          <div class="card-footer border-success row">
            <div class="col-6"><p><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-secondary text-white py-0" %></p></div>
            <div class="col-6"><p><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger text-dark py-0 mx-2" %></p></div>
          </div>
      </div>
    <% end %>
  </div>

  <br>
<% else %>
This is my friend app
<% end %>


